<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<!--  Hidden spinner for choosing mainroads -->
	<Spinner 
        android:id="@+id/view_choice_spinner"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:prompt="@string/quick_view_label"
		android:layout_weight="0"
		android:visibility="invisible"
    />

	<!--  ad banner -->
	<WebView 
		android:id="@+id/adWebView" 
		android:layout_width="fill_parent"
		android:layout_height="172dip"
		android:layout_weight=".5"
		android:layout_gravity="top"
		android:scrollbars="none" />

	<include 
		layout="@layout/topnav" 
		android:layout_height="188dip" 
		android:layout_width="fill_parent"
		android:layout_weight=".5" 
		android:layout_gravity="bottom" />

	<WebView 
		android:id="@+id/mainWebView" 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:layout_weight=".5"
		android:scrollbars="none" />
		
	<include 
		layout="@layout/navbar" 
		android:layout_height="188dip" 
		android:layout_width="fill_parent"
		android:layout_weight=".5" 
		android:layout_gravity="bottom" />

</LinearLayout>
